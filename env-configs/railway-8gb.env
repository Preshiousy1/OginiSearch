# ===================================================
# PHASE 1: RAILWAY 8GB RAM / 8 vCPU OPTIMIZATION
# ===================================================

# === CORE QUEUE CONCURRENCY (CRITICAL) ===
INDEXING_CONCURRENCY=20
BULK_INDEXING_CONCURRENCY=12
DOC_PROCESSING_CONCURRENCY=16

# === BATCH PROCESSING (CRITICAL) ===
BULK_BATCH_SIZE=600
BULK_MAX_BATCH_SIZE=1200

# === MEMORY OPTIMIZATION (CRITICAL) ===
NODE_OPTIONS=--max-old-space-size=2048 --expose-gc
BULK_MAX_MEMORY_USAGE=0.75
MAX_CACHE_SIZE=6000

# === PERFORMANCE BOOSTERS (CRITICAL) ===
ENABLE_FAST_DEDUPLICATION=true
ENABLE_PARALLEL_ANALYSIS=true
ANALYSIS_WORKERS=4

# === RAILWAY OPTIMIZATIONS (CRITICAL) ===
RAILWAY_MEMORY_LIMIT=8192
RAILWAY_CPU_LIMIT=8
RAILWAY_MAX_CONNECTIONS=10 