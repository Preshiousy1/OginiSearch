# ===================================================
# POSTGRESQL DEVELOPMENT ENVIRONMENT CONFIGURATION
# ===================================================

# === APPLICATION SETTINGS ===
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# === SEARCH ENGINE CONFIGURATION ===
# Use PostgreSQL as the primary search engine
SEARCH_ENGINE=postgresql

# === POSTGRESQL DATABASE CONFIGURATION ===
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ogini_search_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_SSL=false

# === POSTGRESQL OPTIMIZATIONS ===
POSTGRES_POOL_SIZE=20
POSTGRES_CONNECTION_TIMEOUT=5000
POSTGRES_IDLE_TIMEOUT=10000
POSTGRES_MAX_CONNECTIONS=100

# === REDIS CONFIGURATION ===
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=

# === QUEUE PROCESSING CONFIGURATION ===
INDEXING_CONCURRENCY=4
BULK_INDEXING_CONCURRENCY=2
DOC_PROCESSING_CONCURRENCY=3

# === BATCH PROCESSING ===
BULK_BATCH_SIZE=100
BULK_MAX_BATCH_SIZE=500

# === MEMORY OPTIMIZATION ===
NODE_OPTIONS=--max-old-space-size=2048
BULK_MAX_MEMORY_USAGE=0.7
MAX_CACHE_SIZE=2000

# === PERFORMANCE SETTINGS ===
ENABLE_FAST_DEDUPLICATION=true
ENABLE_PARALLEL_ANALYSIS=true
ANALYSIS_WORKERS=2

# === BUSINESS SEARCH OPTIMIZATIONS ===
BUSINESS_SEARCH_BOOST_FACTOR=1.5
NIGERIAN_BUSINESS_CONTEXT=true
ENABLE_LOCATION_BOOST=true

# === API CONFIGURATION ===
API_KEY_REQUIRED=false
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=60000 