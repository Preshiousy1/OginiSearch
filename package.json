{
  "name": "ogini",
  "version": "0.0.1",
  "description": "Ogini - A powerful search engine with Nigerian roots",
  "author": "Precious Atam",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build && npm run copy-docs",
    "copy-docs": "mkdir -p dist/api/documentation/docs && cp -r src/api/documentation/docs/* dist/api/documentation/docs/ || true",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:int": "jest --config ./test/jest-int.json",
    "test:memory": "./scripts/testing/run-memory-tests.sh",
    "docker:build": "docker build --no-cache -t ogini .",
    "docker:dev": "sudo docker-compose up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "cleanup:heap": "./scripts/cleanup-heap-snapshots.sh",
    "dev:start": "./scripts/development/start-debug.sh",
    "prod:start": "bash ./start-optimized.sh || node dist/src/main.js",
    "coverage:verify": "./scripts/verify-coverage.sh"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.13",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.13",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/platform-express": "^11.0.13",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.1.6",
    "axios": "^1.9.0",
    "body-parser": "^2.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "classic-level": "^3.0.0",
    "encoding-down": "^7.1.0",
    "level-rocksdb": "^5.0.0",
    "levelup": "^5.1.1",
    "marked": "^15.0.11",
    "mongoose": "^8.13.2",
    "porter-stemmer": "^0.9.1",
    "reflect-metadata": "^0.1.13",
    "rocksdb": "^5.2.1",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "@nestjs/cli": "^11.0.6",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^11.0.13",
    "@types/body-parser": "^1.19.6",
    "@types/encoding-down": "^5.0.5",
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.0",
    "@types/levelup": "^5.1.5",
    "@types/mongoose": "^5.11.96",
    "@types/node": "18.15.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.5.0",
    "mongodb-memory-server": "^10.1.4",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".*\\.(spec|int-spec|e2e-spec)\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest-setup.ts"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "^packages/(.*)$": "<rootDir>/packages/$1"
    }
  }
}
