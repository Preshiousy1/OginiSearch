# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ogini

# RocksDB Configuration
ROCKSDB_PATH=/usr/src/app/data/rocksdb

ENABLE_SWAGGER=true
DOCS_PATH=api/docs
CORS_ORIGIN=*

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost/
REDIS_USERNAME=default
REDIS_PASSWORD=password

# Performance Tuning (see docs/PERFORMANCE-TUNING.md)
# INDEXING_CONCURRENCY=10  # Number of concurrent indexing jobs (default: 5)
# BULK_INDEXING_CONCURRENCY=1  # Bulk indexing queue concurrency (default: 1)
# DOC_PROCESSING_CONCURRENCY=8  # Document processing workers (default: 8)
# PERSISTENCE_INTERVAL_BATCHES=10  # Persist term postings to MongoDB every N batches (default: 10). Reduces write load during bulk indexing.
